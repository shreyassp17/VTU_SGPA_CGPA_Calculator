<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enter_chem_cycle_marks"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:text="Enter Marks"
                android:textAlignment="center"
                android:textColor="@color/colorTextWhite"
                android:textSize="32dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:text="(Out of 100)"
                android:textAlignment="center"
                android:textColor="@color/colorTextWhite"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.25"
        android:background="@drawable/card_background"
        android:elevation="36dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:textColorHint="@color/colorPlaceholder"
                    android:id="@+id/mat"
                    android:drawableTint="@color/colorTextBlack"
                    android:hint="18MATX1"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:maxLength="3"
                    android:textColor="@color/colorTextBlack"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:inputType="number"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="50dp"/>

                <EditText
                    android:id="@+id/me"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:textAlignment="center"
                    android:drawableTint="@color/colorTextBlack"
                    android:fontFamily="@font/poppins"
                    android:hint="18MEX5"
                    android:maxLength="3"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorPlaceholder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:textColorHint="@color/colorPlaceholder"
                    android:id="@+id/che"
                    android:drawableTint="@color/colorTextBlack"
                    android:hint="18CHEX2"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextBlack"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="50dp"/>

                <EditText
                    android:id="@+id/chel"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:textAlignment="center"
                    android:drawableTint="@color/colorTextBlack"
                    android:fontFamily="@font/poppins"
                    android:hint="18CHELX6"
                    android:maxLength="3"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorPlaceholder" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:textColorHint="@color/colorPlaceholder"
                    android:id="@+id/cps"
                    android:drawableTint="@color/colorTextBlack"
                    android:hint="18CPSX3"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextBlack"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="50dp"/>

                <EditText
                    android:id="@+id/cpl"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:textAlignment="center"
                    android:drawableTint="@color/colorTextBlack"
                    android:fontFamily="@font/poppins"
                    android:hint="18CPLX7"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorPlaceholder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:textColorHint="@color/colorPlaceholder"
                    android:id="@+id/eln"
                    android:drawableTint="@color/colorTextBlack"
                    android:hint="18ELNX4"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextBlack"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:inputType="number"
                    android:maxLength="3"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="50dp"/>

                <EditText
                    android:id="@+id/egh"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:textAlignment="center"
                    android:drawableTint="@color/colorTextBlack"
                    android:fontFamily="@font/poppins"
                    android:hint="18EGHX8"
                    android:inputType="number"
                    android:maxLength="3"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="14dp"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorPlaceholder" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="118dp"
                    android:layout_marginRight="118dp"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorButtonText"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="SGPA ="
                    android:textAlignment="center"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/SGPA"
                    android:layout_width="85dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="137dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:drawableTint="@color/colorTextBlack"
                    android:fontFamily="@font/poppins"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/colorTextBlack"
                    android:textColorHint="@color/colorPlaceholder" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>